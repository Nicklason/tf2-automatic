{
    "env": {
        "browser": true,
        "commonjs": true,
        "es6": true
    },
    "plugins": ["node"],
    "extends": [
        "eslint:recommended",
        "plugin:node/recommended"
    ],
    "parserOptions": {
        "sourceType": "module"
    },
    "rules": {
        "quotes": [
            "error",
            "single"
        ],
        "semi": [
            "error",
            "always"
        ],
        "no-process-exit": [
            "off"
        ],
        "node/no-deprecated-api": [
            "error"
        ],
        "node/process-exit-as-throw": [
            "error"
        ],
        "node/no-extraneous-require": [
            "error",
            {
                "allowModules": [
                    "async"
                ]
            }
        ]
    }
}